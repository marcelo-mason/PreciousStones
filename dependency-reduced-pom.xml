  <groupId>net.sacredlabyrinth.Phaed</groupId>
  <artifactId>PreciousStones</artifactId>
  <name>PreciousStones-1.12</name>
  <version>10.5.3</version>
  <url>http://dev.bukkit.org/server-mods/preciousstones/</url>
  <ciManagement>
    <system>jenkins</system>
    <url>http://104.236.246.108/:8080</url>
  </ciManagement>
  <scm>
    <connection>scm:git:git:@github.com:marcelo-mason/PreciousStones.git</connection>
    <developerConnection>scm:git:git:@github.com:marcelo-mason/PreciousStones.git</developerConnection>
    <tag>PreciousStones</tag>
    <url>http://github.com/marcelo-mason/PreciousStones.git/tree/master/</url>
  </scm>
  <build>
    <resources>
      <resource>
        <targetPath>.</targetPath>
        <filtering>true</filtering>
        <directory>${basedir}/src/main/resources</directory>
        <includes>
          <include>plugin.yml</include>
          <include>config.yml</include>
          <include>language.yml</include>
        </includes>
      </resource>
    </resources>
    <finalName>${project.name}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <showDeprecation>true</showDeprecation>
          <showWarnings>true</showWarnings>
          <fork>true</fork>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
      </plugin>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.4.2</version>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <id>copy-jar-to-server</id>
            <phase>install</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <taskdef />
                <trycatch>
                  <try>
                    <copy>
                      <fileset>
                        <include />
                      </fileset>
                    </copy>
                  </try>
                  <catch>
                    <echo>Could not copy jar to server</echo>
                  </catch>
                </trycatch>
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <minimizeJar>true</minimizeJar>
              <relocations>
                <relocation>
                  <pattern>org.joda.time</pattern>
                  <shadedPattern>ps.org.joda.time</shadedPattern>
                </relocation>
              </relocations>
              <artifactSet>
                <excludes>
                  <exclude>org.bukkit:bukkit</exclude>
                  <exclude>org.yaml:snakeyaml</exclude>
                </excludes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
